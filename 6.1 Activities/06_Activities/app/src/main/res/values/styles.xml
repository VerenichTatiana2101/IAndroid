<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStrokeTransparent" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#00000000</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="cornerRadius">25dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
    </style>

    <style name="EmailInputControl" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="errorTextAppearance">@style/ErrorTextAppearance</item>
    </style>

    <style name="ErrorTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/holo_orange_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>
</resources>
